Bootstrap: debootstrap
OSVersion: bionic
MirrorURL: http://us.archive.ubuntu.com/ubuntu/

%help
  A container to hold Snippy variant caller.
  Run `singularity exec snippy.simg snippy`

%environment
  PATH=/usr/local/bin:$PATH

%post
    apt-get update
    apt-get install -y --no-install-recommends apt-utils
    apt-get update
    apt-get install -y software-properties-common
    apt-add-repository universe
    apt-get update
    apt-get install -y \
      bioperl \
      build-essential \
      cmake \
      curl \
      git \
      graphviz \
      libbz2-dev \
      libhts-dev \
      libcurl4 \
      libcurl4-openssl-dev \
      libncurses5-dev \
      libncursesw5-dev \
      libgd-gd2-perl \
      libfile-slurp-perl \
      libssl-dev \
      lzma-dev \
      openjdk-8-jre \
      pkg-config \
      seqtk \
      snp-sites \
      time \
      wget \
      zlib1g-dev
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8
    echo 'export LC_ALL=C.UTF-8' >> $SINGULARITY_ENVIRONMENT
    echo 'export LANG=C.UTF-8' >> $SINGULARITY_ENVIRONMENT

    #============================================
    # INSTALL FREEBAYES
    #============================================
    VERSION="1.3.0"
    wget "https://github.com/ekg/freebayes/releases/download/v${VERSION}/freebayes-v${VERSION}-1" -O "/usr/bin/freebayes-v${VERSION}"
    
    #============================================
    # INSTALL MINIMAP2
    #============================================
    VERSION="2.11"
    wget https://github.com/lh3/minimap2/archive/v"$VERSION".tar.gz
    tar xzf v"$VERSION".tar.gz
    rm v"$VERSION".tar.gz
    cd minimap2-*
    make
    export PATH=$PWD:$PATH
    echo "export PATH=$(pwd):$PATH" >> $SINGULARITY_ENVIRONMENT
    cd ..

    #============================================
    # INSTALL VT
    #============================================
    git clone https://github.com/atks/vt.git
    cd vt
    git checkout 2187ff6347086e38f71bd9f8ca622cd7dcfbb40c
    make
    make test
    export PATH=$PWD:$PATH
    echo "export PATH=$(pwd):$PATH" >> $SINGULARITY_ENVIRONMENT
    cd ..
    
    #============================================
    # INSTALL SNIPPY
    #============================================
    VERSION="4.6.0"
    wget https://github.com/tseemann/snippy/archive/v"$VERSION".tar.gz
    tar xzf v$VERSION.tar.gz
    rm v$VERSION.tar.gz
    cd snippy*/bin
    echo "export PATH=$(pwd):$PATH" >> $SINGULARITY_ENVIRONMENT
