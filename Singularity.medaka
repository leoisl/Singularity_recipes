Bootstrap: debootstrap
OSVersion: bionic
MirrorURL: http://us.archive.ubuntu.com/ubuntu/

%help
  A container to hold the variant calling and polishing tool nanopolish.
  Run `singularity exec nanopolish.simg nanopolish`

%environment
  PATH=/usr/local/bin:$PATH

%post
    apt-get update
    apt-get install -y software-properties-common
    apt-add-repository universe
    apt-get update
    apt-get install -y \
      build-essential \
      libbz2-dev \
      libncurses5-dev \
      libcurl4-gnutls-dev \
      liblzma-dev \
      make \
      perl-base \
      procps \
      python-dev \
      python-pip \
      python-setuptools \
      python3-dev \
      python3-pip \
      python3-setuptools \
      sed \
      wget \
      zlib1g-dev
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8
    echo 'export LC_ALL=C.UTF-8' >> $SINGULARITY_ENVIRONMENT
    echo 'export LANG=C.UTF-8' >> $SINGULARITY_ENVIRONMENT

    #================================
    # INSTALL TABIX AND BGZIP2
    #================================
    VERSION="1.9"
    wget https://github.com/samtools/htslib/releases/download/"$VERSION"/htslib-"$VERSION".tar.bz2
    tar xjf htslib-"$VERSION".tar.bz2
    rm htslib-*.tar.bz2
    cd htslib*
    ./configure
    make
    make install
    cd ..
    rm -rf htslib-*

    #================================
    # INSTALL SAMTOOLS
    #================================
    VERSION="1.9"
    wget https://github.com/samtools/samtools/releases/download/"$VERSION"/samtools-"$VERSION".tar.bz2
    tar xjf samtools-"$VERSION".tar.bz2
    rm samtools*.tar.bz2
    cd samtools*
    ./configure
    make
    make install
    cd ..
    rm -rf samtools-*

    #============================================
    # INSTALL MINIMAP2
    #============================================
    VERSION="2.17"
    wget https://github.com/lh3/minimap2/archive/v"$VERSION".tar.gz
    tar xzf v"$VERSION".tar.gz
    rm v"$VERSION".tar.gz
    cd minimap2-*
    make
    export PATH=$PWD:$PATH
    echo "export PATH=$(pwd):$PATH" >> $SINGULARITY_ENVIRONMENT
    cd ..

    #================================
    # INSTALL MEDAKA
    #================================
    pip3 install medaka


